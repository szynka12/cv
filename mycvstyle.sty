% Head of cv, name info linkedin, fast bio
\newcommand{\name}[1]{%
	\def \thename {{#1}}
}

\newcommand{\address}[2]{%
	\def \theaddressfirst {{#1}}
	\def \theaddresssecond {{#2}}
}
\newcommand{\phone}[1]{%
	\def \thephone {{#1}}
}

\newcommand{\mail}[1]{%
\def\themail{\href{mailto:{#1}}{{#1}}}
}

\newcommand{\github}[1]{%
	\def\thegithuburl{ http://#1 }
	\def\thegithub{ \href{http://#1}{{#1}} }
}

\newcommand{\gscholar}[1]{%
	\def\thescholarurl{ https://#1 }
	\def\thescholar{ \href{\thescholarurl}{{#1}} }
}

\newcommand{\linkedin}[1]{%
	\def \thelinkedinurl{http://www.#1}
	\def \thelinkedin{\href{http://www.#1}{{#1}}}
}

\newcommand{\researchgate}[1]{%
	\def \theresearchgateurl{http://www.#1}
	\def \theresearchgate{\href{http://www.#1}{{#1}}}
}

\newcommand{\personal}[1]{%
	\def \thepersonal {{#1}}
}

\newcommand{\comment}[1]{%
	\noindent
	\textcolor{gray}{{#1}} \par
}

\newcommand{\infolr}[0]{%
	\begin{minipage}[t]{0.55\textwidth}
		{\Huge\thename{}}
		\vspace{0.5em}
		%
		\par
		{\small \comment{\thepersonal}}
	\end{minipage}
	\hspace{0.01\textwidth}
	\begin{minipage}[t]{0.44\textwidth}
		\centering
		\normalsize
		\textit{E-mail:} \themail{}\par
		\vspace{0.5em}
		\small
		\hspace{-3em}
		\begin{minipage}{0.51\textwidth}
			\centering
			\begin{tabular}[t]{c c c c}
				\href{\thegithuburl}{\includegraphics[height=2em]{pic/github}}            &
				\href{\thelinkedinurl}{\includegraphics[height=2em]{pic/linkedin}}        &
				{\href{\thescholarurl}{\includesvg[height=2em]{pic/Google_Scholar_logo}}} &
				\href{\theresearchgateurl}{\includesvg[height=2em]{pic/ResearchGate_icon_SVG}} \\
			\end{tabular}
		\end{minipage}
		\begin{minipage}{0.18\textwidth}
			\centering
			\itshape
			\begin{tabular}[t]{r l}
				h-index:   & 4  \\
				citations: & 54 \\
			\end{tabular}
		\end{minipage}
	\end{minipage}
}


\newcommand{\info}[0]{%
	\begin{flushleft}
		{\Huge\thename{}}\par
		%
		\parbox{7cm}{\textit{Address:} \theaddressfirst{} \\ \phantom{Address: }\theaddresssecond{}}
		\hspace{0.2cm}
		\parbox{7cm}{\textit{Phone:} \thephone{} \\ \textit{E-mail:} \themail{}}
		\parbox{4cm}{%
			\href{\thegithub}{\includegraphics[height=0.75cm]{pic/github}}
			\href{\thelinkedin}{\includegraphics[height=0.75cm]{pic/linkedin}}}\par

	\end{flushleft}
}

